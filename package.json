{
  "name": "svelte-tiptap",
  "description": "Svelte components for tiptap v2",
  "version": "1.1.2",
  "author": "sibiraj-s",
  "license": "MIT",
  "repository": "https://github.com/sibiraj-s/svelte-tiptap.git",
  "bugs": "https://github.com/sibiraj-s/svelte-tiptap/issues",
  "homepage": "https://github.com/sibiraj-s/svelte-tiptap#readme",
  "keywords": [
    "svelte",
    "tiptap",
    "svelte-tiptap",
    "tiptap-v2",
    "prosemirror",
    "rich-text-editor"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev --port 3009",
    "build:demo": "vite build",
    "build": "npm run build:demo && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "is-ci || npm run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "e2e": "cypress open --e2e",
    "lint": "eslint . --ext .js,.ts,.svelte --ignore-path .gitignore",
    "prepare": "is-ci || husky install",
    "publish:npm": "npm publish"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.3",
    "@tiptap/extension-bubble-menu": "^2.0.3",
    "@tiptap/extension-floating-menu": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "svelte": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.22.4",
    "@sveltejs/package": "^2.2.0",
    "@testing-library/svelte": "^4.0.3",
    "@tiptap/core": "^2.0.4",
    "@tiptap/extension-bubble-menu": "^2.0.4",
    "@tiptap/extension-floating-menu": "^2.0.4",
    "@tiptap/pm": "^2.0.4",
    "@tiptap/starter-kit": "^2.0.4",
    "@types/node": "^18.17.1",
    "autoprefixer": "^10.4.14",
    "clsx": "^2.0.0",
    "commitlint-config-non-conventional": "^1.0.1",
    "cypress": "^12.17.3",
    "eslint": "^8.46.0",
    "eslint-config-pegasus": "^5.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-svelte": "^2.32.4",
    "happy-dom": "^10.7.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "prettier-plugin-svelte": "^3.0.3",
    "publint": "^0.2.0",
    "sass": "^1.64.2",
    "svelte": "^4.1.2",
    "svelte-check": "^3.4.6",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "typescript-transform-extensions": "^1.0.1",
    "vite": "^4.4.8",
    "vitest": "^0.33.0"
  }
}
